@model UI.MVC.Models.Shared.PageTitleModel;

<article class="project-page-header-container project-page-header-container-small-vertical">
    <div class="page-title-wrapper">
        <h2>@Model.Title</h2>
        <div class="description">
            <p>@Model.Description</p>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(@Model.ActionElement))
    {
        <div class="action-container">
          @Html.Raw(Model.ActionElement)
        </div>
    }
</article>